# Backend environment variables
# Copy to .env and adjust values for local development

MONGO_URL="mongodb://localhost:27017"
DB_NAME="film_robo"
CORS_ORIGINS="http://localhost:3000,https://localhost:3000"

# OpenAI API key (optional). Leave empty to use keyword fallback only.
OPENAI_API_KEY=

# TMDb API key. If left empty or set to PLACEHOLDER, mock data are used.
TMDB_API_KEY=

# Optional: TMDb v4 Read Access Token for future Bearer-authenticated requests
TMDB_READ_ACCESS_TOKEN=
